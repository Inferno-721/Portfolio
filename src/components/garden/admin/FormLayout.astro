---
import BaseLayout from "@/layouts/BaseLayout.astro";
import BackLink from "@/components/garden/BackLink.astro";

interface Props {
  title: string;
  description: string;
  backLink: string;
  backText: string;
}

const { title, description, backLink, backText } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <div class="container mx-auto pt-24 pb-12 md:pt-32 xl:pt-24">
    <BackLink href={backLink} text={backText} />

    <div class="mx-auto max-w-2xl">
      <h1 class="mb-8 text-3xl font-bold">{title}</h1>

      <slot />
    </div>
  </div>
</BaseLayout>
